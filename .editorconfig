root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

[*.{yaml,yml}]
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.{js,json,ts}]
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.{js,ts}]
block_comment_start = /**
block_comment = *
block_comment_end = */
